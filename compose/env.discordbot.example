# ====================
# ESSENTIAL CONFIGURATION (REQUIRED)
# ====================
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_SERVER=YOUR_SERVER_ID
HOMELAB_CATEGORY_ID=YOUR_DISCORD_CATEGORY_ID 
SUPER_ADMINS=DISCORD_USERNAME|DISCORD_ID

# ====================
# BASIC CONFIGURATION
# ====================
# Environment: development, production, or testing
ENVIRONMENT=development

# Domain configuration (used for both hostname and service URLs)
# Use real domain in production or localhost/IP for local testing
DOMAIN=example.com

# Service availability mode
OFFLINE_MODE=true # true = disable internet-dependent features (DNS checks, public IP)

# Services to enable (comma-separated)
ENABLED_SERVICES=Web,Game,File

# ====================
# SECURITY CONFIGURATION
# ====================
# These keys will be auto-generated if not provided
# AES_KEY=base64_encoded_key
# ENCRYPTION_KEY=fernet_key
# JWT_SECRET_KEY=base64_encoded_key

# ====================
# USER PERMISSIONS
# ====================
# Format: USERNAME|ID,USERNAME|ID
# ADMINS=USERNAME|ID
# USERS=USERNAME|ID,USERNAME|ID,USERNAME|ID

# ====================
# RATE LIMITING
# ====================
# SESSION_DURATION_HOURS=24
# RATE_LIMIT_WINDOW=60        # Time window in seconds
# RATE_LIMIT_MAX_ATTEMPTS=5   # Max attempts per window

# ====================
# DOCKER CONFIGURATION
# ====================
# PUID=1001  # Process User ID for Docker
# PGID=987   # Process Group ID for Docker