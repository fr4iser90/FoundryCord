# ====================
# ESSENTIAL CONFIGURATION (REQUIRED)
# ====================
DISCORD_TOKEN=           # Your bot token from Discord Developer Portal (REQUIRED)
DISCORD_SERVER=          # Your Discord server/guild ID (REQUIRED)
SUPER_ADMINS=           # Format: USERNAME|ID (e.g., admin|123456789) (REQUIRED)
ENVIRONMENT=development  # Environment: development, production, or testing (REQUIRED)
DOMAIN=                 # Your domain or IP address (REQUIRED)
ENABLED_SERVICES=       # Comma-separated list of services (REQUIRED)
HOMELAB_CATEGORY_ID=    # Discord category ID (auto-created if not specified)

# ====================
# DATABASE CONFIGURATION (REQUIRED)
# ====================
POSTGRES_HOST=homelab-postgres  # Database host (REQUIRED)
POSTGRES_PORT=5432             # Database port (REQUIRED)
POSTGRES_DB=homelab           # Database name (REQUIRED)
POSTGRES_USER=postgres        # Database admin user (REQUIRED)
APP_DB_USER=homelab_discord_bot  # Application database user (REQUIRED)
POSTGRES_PASSWORD=            # Database admin password (REQUIRED)
APP_DB_PASSWORD=             # Application database password (REQUIRED)

# ====================
# SECURITY CONFIGURATION (REQUIRED)
# ====================
AES_KEY=                # Encryption key for sensitive data (REQUIRED)
ENCRYPTION_KEY=         # General purpose encryption key (REQUIRED)
JWT_SECRET_KEY=         # JWT token signing key (REQUIRED)

# ====================
# TRULY OPTIONAL CONFIGURATION
# ====================
OFFLINE_MODE=false      # Enable offline mode
ADMINS=                 # Additional admin users (Format: USERNAME|ID,USERNAME|ID)
USERS=                  # Allowed users list
SESSION_DURATION_HOURS=24
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_ATTEMPTS=5

# ====================
# DOCKER CONFIGURATION (OPTIONAL)
# ====================
PUID=1001
PGID=987

# ====================
# DATABASE PERFORMANCE TUNING (OPTIONAL)
# ====================
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_WORK_MEM=16MB